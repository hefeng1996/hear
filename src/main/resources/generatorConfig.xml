<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <!-- 配置mysql 驱动jar包路径.用了绝对路径 -->
    <!--<classPathEntry location="/Users/wangyongzhi/.m2/repository/mysql/mysql-connector-java/5.1.34/mysql-connector-java-5.1.34.jar" />-->
    <classPathEntry location="C:\Users\1725\.m2\repository\mysql\mysql-connector-java\8.0.13\mysql-connector-java-8.0.13.jar" />

    <context id="wangyongzhi_mysql_tables" targetRuntime="MyBatis3">
        <!-- 防止生成的代码中有很多注释，加入下面的配置控制 -->
        <commentGenerator>
            <property name="suppressAllComments" value="true" />
            <property name="suppressDate" value="true" />
        </commentGenerator>

        <!-- 数据库连接 -->
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://127.0.0.1:3306/music?useUnicode=true&amp;serverTimezone=Asia/Shanghai&amp;characterEncoding=UTF-8"
                        userId="root"
                        password="root">
        </jdbcConnection>

        <javaTypeResolver >
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

        <!-- 数据表对应的model层  -->
        <javaModelGenerator targetPackage="com.he.hear.pojo" targetProject="src">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <!-- sql com.he.hear.mapper 映射配置文件 -->
        <sqlMapGenerator targetPackage="com.he.hear.mapper"  targetProject="src">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>

        <!-- mybatis3中的mapper接口 -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.he.hear.mapper" targetProject="src">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

        <!-- 数据表进行生成操作 schema:相当于库名; tableName:表名; domainObjectName:对应的DO -->
        <table schema="music" tableName="admin" domainObjectName="Admin"/>
        <table schema="music" tableName="user" domainObjectName="User"/>
        <table schema="music" tableName="comments" domainObjectName="Comments"/>
        <table schema="music" tableName="moment" domainObjectName="Moment"/>
        <table schema="music" tableName="playrecord" domainObjectName="PlayRecord"/>
        <table schema="music" tableName="praise" domainObjectName="Praise"/>
        <table schema="music" tableName="relation" domainObjectName="Relation"/>
        <table schema="music" tableName="singer" domainObjectName="Singer"/>
        <table schema="music" tableName="song" domainObjectName="Song"/>
        <table schema="music" tableName="song_songlist" domainObjectName="songSongList"/>
        <table schema="music" tableName="songlist" domainObjectName="songList"/>
        <table schema="music" tableName="songlist_tag" domainObjectName="songListTag"/>
        <table schema="music" tableName="tag" domainObjectName="Tag"/>
        <table schema="music" tableName="user_singer" domainObjectName="userSinger"/>
        <table schema="music" tableName="user_songlist" domainObjectName="userSongList"/>
        <table schema="music" tableName="user_tag" domainObjectName="userTag"/>
        <table schema="music" tableName="warning" domainObjectName="Warning"
                       enableCountByExample="true" enableUpdateByExample="true"
                       enableDeleteByExample="true" enableSelectByExample="true"
                       selectByExampleQueryId="true"/>

    </context>
</generatorConfiguration>